<% unless comment.archived? %>
      <tr>
        <td><strong><%= comment.commenter %></strong></td>
        <td><%= comment.body %></td>
        <td>
          <%= link_to "Destroy Comment", [comment.article, comment], data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                      }, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>