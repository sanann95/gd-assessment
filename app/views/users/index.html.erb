<div class="container">
  <h1>Users</h1>
  <% if @users.any? %>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.date_of_birth %></td>
              <td><%= link_to 'Show', user, class: 'btn btn-primary btn-sm' %></td>
              <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-secondary btn-sm' %></td>
              <td><%= link_to 'Destroy', user, method: :delete, data: { 
                confirm: 'Are you sure?',
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
              }, class: 'btn btn-danger btn-sm' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <p>No users found.</p>
  <% end %>

  <% if flash[:notice].present? %>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert].present? %>
    <div class="alert alert-danger" role="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= link_to "Manage Articles", articles_path, class: 'btn btn-primary mt-3' %>
  <%= link_to 'New User', new_user_path, class: 'btn btn-primary  mt-3' %>
</div>
